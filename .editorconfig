# Drupal editor configuration normalization
# @see http://editorconfig.org/

# This is the top-most .editorconfig file; do not search in parent directories.
root = true

[*.md]
end_of_line = LF
charset = utf-8
indent_style = space
indent_size = 4
trim_trailing_whitespace = false
insert_final_newline = true

[docker-compose.yml]
end_of_line = LF
charset = utf-8
indent_style = space
indent_size = 4
trim_trailing_whitespace = false
insert_final_newline = true

[*.html]
end_of_line = LF
charset = utf-8
indent_style = space
indent_size = 4
trim_trailing_whitespace = false
insert_final_newline = true

[*.yml]
end_of_line = LF
charset = utf-8
indent_style = space
indent_size = 2
trim_trailing_whitespace = false
insert_final_newline = false